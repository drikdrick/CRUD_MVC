@model IEnumerable<Inventory.Models.barang>

@{
    ViewBag.Title = "ListBarang";
}

<h2>ListBarang</h2>

<p>
    @Html.ActionLink("Create New", "Barang")
</p>
<table class="table table-hover">
    <tr>
        <th>
            Nama Barang
        </th>
        <th>
            Deskripsi
        </th>
        <th>
            Stok
        </th>
        <th>
            Harga
        </th>
        <th>
            Tanggal Entri
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nama_barang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.deskripsi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.jumlah)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.harga)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.created_at)
        </td>
        <td>
            <a href="#"><i class="glyphicon glyphicon-eye-open"></i></a>
            <a href="@Url.Action("Barang", new {item.id, item.nama_barang, item.harga, item.jumlah, item.deskripsi })"><i class="glyphicon glyphicon-pencil"></i></a>
            <a href="@Url.Action("Delete", new {item.id })"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
    </tr>
}

</table>
